<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.anychart.AnyChartView
        android:id="@+id/any_chart_view"
        android:layout_width="350dp"
        android:layout_height="500dp" />
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/setup_date"
        android:text="Здесь отобразится выбранная дата"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/button_change_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Ваш минимальный показатель уровня глюкозы в крови"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.65"/>
        <TextView
            android:id="@+id/glucose_min"
            android:text="Нет данных за этот период"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.35"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Ваш максимальный показатель уровня глюкозы в крови"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.65"/>
        <TextView
            android:id="@+id/glucose_max"
            android:text="Нет данных за этот период"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.35"/>
    </LinearLayout>
</LinearLayout>